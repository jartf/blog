---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <div class="flex items-center justify-center min-h-screen dark:bg-inherit bg-fixed bg-cover bg-bottom error-bg">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 text-center mx-10 -mt-80">
        <h1 class="relative text-9xl tighter text-shadow font-sans font-bold mr-1">
          <span>4</span><span>0</span><span>4</span>
        </h1>
        <h2 class="font-semibold text-2xl">Page not found</h2>
        <p class="mt-3 mb-8">Sorry, but the page you requested was not found. Maybe try another link?</p>
        <a class="bg-yellow-400 dark:bg-yellow-700 px-5 py-3 text-sm shadow-sm font-medium rounded-full hover:shadow-lg">
          Go to Homepage
        </a>
      </div>
    </div>
  </div>

<style>
	.error-bg {
		background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 1600 900'><polygon fill='%23f0b608' points='957 450 539 900 1396 900'/><polygon fill='%23e6d710' points='957 450 872.9 900 1396 900'/><polygon fill='%23e7af05' points='-60 900 398 662 816 900'/><polygon fill='%23e7d808' points='337 900 398 662 816 900'/><polygon fill='%23d8a408' points='1203 546 1552 900 876 900'/><polygon fill='%23f1e213' points='1203 546 1552 900 1162 900'/><polygon fill='%23f0b607' points='641 695 886 900 367 900'/><polygon fill='%23e4d506' points='587 900 641 695 886 900'/><polygon fill='%23eab822' points='1710 900 1401 632 1096 900'/><polygon fill='%23e8da14' points='1710 900 1401 632 1365 900'/><polygon fill='%23e8b008' points='1210 900 971 687 725 900'/><polygon fill='%23edde14' points='943 900 1210 900 971 687'/></svg>");
	}
	.tighter {
		letter-spacing: -0.5rem;
	}
	.text-shadow {
		text-shadow: -5px 0 0 rgb(202 138 4);
	}
</style>
